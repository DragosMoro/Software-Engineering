<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.implementation.Controller.LoginController">
   <children>
      <AnchorPane fx:id="loginAnchorPane" prefHeight="400.0" prefWidth="600.0">
         <children>
            <Label layoutX="244.0" layoutY="53.0" text="LOGIN">
               <font>
                  <Font name="Arial Rounded MT Bold" size="36.0" />
               </font>
            </Label>
            <TextField fx:id="emailTextField" layoutX="228.0" layoutY="163.0" promptText="Email" />
            <Button layoutX="275.0" layoutY="318.0" mnemonicParsing="false" onAction="#onLoginButtonAction" text="Login">
               <font>
                  <Font name="Arial Rounded MT Bold" size="14.0" />
               </font>
            </Button>
            <PasswordField fx:id="passwordField" layoutX="228.0" layoutY="236.0" promptText="Password" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
